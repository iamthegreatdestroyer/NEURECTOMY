{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["@webgpu/types"],
    "baseUrl": ".",
    "paths": {
      "@neurectomy/ui": ["packages/ui/src"],
      "@neurectomy/core": ["packages/core/src"],
      "@neurectomy/types": ["packages/types/src"],
      "@neurectomy/utils": ["packages/utils/src"],
      "@neurectomy/api-client": ["packages/api-client/src"],
      "@neurectomy/3d-engine": ["packages/3d-engine/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}
