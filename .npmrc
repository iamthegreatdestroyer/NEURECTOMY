# pnpm Configuration for NEURECTOMY Monorepo
# ==========================================

# Prefer workspace packages over registry for internal dependencies
link-workspace-packages=true
prefer-workspace-packages=true

# Auto-install peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Hoist common patterns to root for faster installs
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@types/*
public-hoist-pattern[]=typescript
public-hoist-pattern[]=tsup
public-hoist-pattern[]=vitest
public-hoist-pattern[]=@vitest/*
public-hoist-pattern[]=rimraf

# Enable shamefully-hoist for compatibility with some packages
# that expect flat node_modules
shamefully-hoist=false

# Save exact versions for reproducibility
save-exact=true

# Use lockfile version 9 for better performance
use-lockfile-v6=false
