{
  "name": "neurectomy",
  "version": "0.1.0",
  "description": "The Ultimate Agent Development & Orchestration Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:ox": "oxlint --config oxlint.json .",
    "lint:ox:fix": "oxlint --config oxlint.json --fix .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rimraf node_modules",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install",
    "backend:dev": "cd services/rust-core && cargo watch -x run",
    "backend:build": "cd services/rust-core && cargo build --release",
    "frontend:dev": "cd apps/spectrum-workspace && npm run dev",
    "frontend:build": "cd apps/spectrum-workspace && npm run build",
    "python:dev": "cd services/ml-service && python -m uvicorn main:app --reload",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@tauri-apps/cli": "2.0.0-rc.18",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@webgpu/types": "^0.1.67",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "oxlint": "1.32.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "jsonpath-plus": ">=10.3.0",
      "form-data": ">=4.0.0",
      "tough-cookie": ">=4.1.3",
      "js-yaml": ">=4.1.0",
      "esbuild": ">=0.25.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0"
    }
  }
}
