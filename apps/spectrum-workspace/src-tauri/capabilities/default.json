{
  "$schema": "https://schemas.tauri.app/config/2/Capability",
  "identifier": "default",
  "description": "Default capabilities for NEURECTOMY Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "notification:default",
    "os:default",
    "process:default",
    "window-state:default"
  ]
}
