{
  "name": "@neurectomy/discovery-engine",
  "version": "0.1.0",
  "description": "Open source discovery, repository scanning, dependency analysis, and library recommendations for NEURECTOMY",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./scanner": {
      "import": "./dist/scanner/index.js",
      "types": "./dist/scanner/index.d.ts"
    },
    "./analyzer": {
      "import": "./dist/analyzer/index.js",
      "types": "./dist/analyzer/index.d.ts"
    },
    "./recommendations": {
      "import": "./dist/recommendations/index.js",
      "types": "./dist/recommendations/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@neurectomy/types": "workspace:*",
    "@octokit/rest": "^20.0.2",
    "@octokit/types": "^12.4.0",
    "semver": "^7.5.4",
    "eventemitter3": "^5.0.1",
    "p-limit": "^5.0.0",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@neurectomy/typescript-config": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "neurectomy",
    "discovery",
    "repository-scanner",
    "dependency-analysis",
    "vulnerability-detection",
    "library-recommendations",
    "github-api",
    "open-source"
  ],
  "author": "NEURECTOMY Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neurectomy/neurectomy.git",
    "directory": "packages/discovery-engine"
  }
}
