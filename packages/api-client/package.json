{
  "name": "@neurectomy/api-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./graphql": {
      "types": "./dist/graphql.d.ts",
      "import": "./dist/graphql.js",
      "require": "./dist/graphql.cjs"
    },
    "./rest": {
      "types": "./dist/rest.d.ts",
      "import": "./dist/rest.js",
      "require": "./dist/rest.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "@neurectomy/types": "workspace:*",
    "@tanstack/react-query": "^5.17.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "graphql-ws": "^5.14.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-query": "^6.0.0",
    "@neurectomy/test-config": "workspace:*",
    "@neurectomy/typescript-config": "workspace:*",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0"
  }
}
