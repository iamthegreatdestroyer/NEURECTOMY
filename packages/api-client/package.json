{
  "name": "@neurectomy/api-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./graphql": {
      "import": "./src/graphql/index.ts",
      "types": "./src/graphql/index.ts"
    },
    "./rest": {
      "import": "./src/rest/index.ts",
      "types": "./src/rest/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "@neurectomy/types": "workspace:*",
    "@tanstack/react-query": "^5.17.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "graphql-ws": "^5.14.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-query": "^6.0.0",
    "@types/react": "^19.2.7",
    "typescript": "^5.3.0"
  }
}
